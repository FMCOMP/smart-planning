<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.EditTextAppearance" parent="AppTheme.TextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:allowUndo">true</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:paddingTop">@dimen/dp_1_6</item>
        <item name="android:paddingLeft">@dimen/dp_0_8</item>
        <item name="android:paddingBottom">@dimen/dp_0_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_1_6</item>
        <item name="editTextBackground">@android:color/white</item>
        <item name="android:layout_marginTop">@dimen/dp_0_6</item>
        <item name="android:layout_marginStart">@dimen/dp_1_6</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>