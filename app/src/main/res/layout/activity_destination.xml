<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/destination_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
    <FrameLayout
        android:id="@+id/destination_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map Fragment embedded with the map object -->
        <fragment
            android:id="@+id/map_layout"
            class="com.here.android.mpa.mapping.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/destination_content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/app_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_height"
                android:theme="@style/AppTheme.Toolbar"
                app:navigationIcon="@drawable/ic_menu"
                app:title="@string/appName"
                app:titleTextAppearance="@style/AppTheme.Toolbar" />

            <RelativeLayout
                android:id="@+id/destination_field_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1_6"
                android:background="@android:color/white"
                android:defaultFocusHighlightEnabled="false"
                android:padding="@dimen/dp_1_6">

                <EditText
                    android:id="@+id/destination_edit_text"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="225dp"
                    android:layout_height="56dp"
                    android:layout_alignBottom="@+id/time_picker_layout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/time_picker_layout"
                    android:contentDescription="@string/locationHolder"
                    android:enabled="true"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/locationHolder"
                    android:imeOptions="actionGo"
                    android:inputType="none"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/colorPrimary"
                    android:textColorLink="@color/colorPrimary"
                    android:textIsSelectable="true"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/time_picker_layout"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/destination_edit_text"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_1_6"
                    android:layout_marginRight="@dimen/dp_1_6"
                    android:orientation="vertical"
                    android:layout_alignRight="@+id/destination_edit_text"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/time_clock"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="@dimen/dp_1_6"
                        android:layout_marginStart="@dimen/dp_1_6"
                        android:contentDescription="@string/timeDisplayText"
                        app:srcCompat="@drawable/ic_access_time" />

                    <EditText
                        android:id="@+id/time_display_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/timeDisplayText"
                        android:cursorVisible="true"
                        android:defaultFocusHighlightEnabled="false"
                        android:focusedByDefault="false"
                        android:gravity="center"
                        android:hint="@string/timeDisplayText"
                        android:imeOptions="actionNext"
                        android:inputType="text|numberDecimal|time"
                        android:lineSpacingExtra="12sp"
                        android:scrollbarStyle="insideOverlay"
                        android:soundEffectsEnabled="false"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textAppearance="@style/AppTheme.TextAppearance"
                        android:textColor="@android:color/black"
                        android:textColorHighlight="@color/colorAccent"
                        android:textColorHint="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </FrameLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
    <android.support.design.widget.NavigationView
        android:id="@+id/app_nav_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:saveEnabled="true"
        android:soundEffectsEnabled="false"
        android:textDirection="firstStrong"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_view">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>